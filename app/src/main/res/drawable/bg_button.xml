<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/color_button_normal"></solid>

            <corners android:radius="3dip" />
        </shape></item>
    <item android:state_enabled="false" android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/color_button_disable"></solid>

            <corners android:radius="3dip" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/color_button_pressed" />

            <corners android:radius="3dip" />
        </shape></item>

</selector>